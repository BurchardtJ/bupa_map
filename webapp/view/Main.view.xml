<mvc:View xmlns:f="sap.f" controllerName="bupamap.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:ol="incentergy.ol" xmlns:layer="incentergy.ol.layer" xmlns:source="incentergy.ol.source"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <f:FlexibleColumnLayout id="fcl" layout="TwoColumnsMidExpanded">
                <f:beginColumnPages>
                    <Page id="pageTable">
                        <Table id="table" growing="true" growingScrollToLoad="true" items="{/C_BusinessPartner}">
                            <headerToolbar>
                                <Toolbar id="toolbar">
                                    <Label id="tableHeader" text="GeschÃ¤ftspartner"/>
                                    <ToolbarSpacer id="toolbarSpacer" />
                                    <SearchField id="searchField" width="auto" search=".onFilterBupa" />
                                </Toolbar>
                            </headerToolbar>
                            <columns>
                                <Column id="_IDGenColumn1">
                                    <Text id="_IDGenText1" text="Name" />
                                </Column>
                                <Column id="_IDGenColumn2">
                                    <Text id="_IDGenText2" text="Addresse" />
                                </Column>
                                <Column id="_IDGenColumn3">
                                    <Text id="_IDGenText3" text="Bundesland" />
                                </Column>
                                <Column id="_IDGenColumn4">
                                    <Text id="_IDGenText4" text="Rolle" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem1">
                                    <Text id="_IDGenText5" text="{Name}" />
                                    <Text id="_IDGenText6" text="{AddressLine1Text}" />
                                    <Text id="_IDGenText7" text="{Region}" />
                                    <Text id="_IDGenText8" text="{Role}" />
                                </ColumnListItem>
                            </items>
                        </Table>
                    </Page>
                </f:beginColumnPages>
                <f:midColumnPages>
                    <Page id="pageMap">
                    <Button xmlns="sap.m" text="{i18n>btnText2}" id="button3" press="getCenter"/>
                    <Button xmlns="sap.m" text="{i18n>btnText}" id="button2" press="onButtonPress"/>
                        <ol:Map center="1152747.3744924355, 6585240.978424183" zoom="2" id="map">
                            <layer:Tile id="_IDGenTile1">
                                <source:OSM id="_IDGenOSM1" url="{= 'https://{a-c}.tile.thunderforest.com/cycle/{z}/{x}/{y}.png?apikey=e5da76567a144d2888f7669cfcfc20b6'}"></source:OSM>
                            </layer:Tile>
                            <layer:Vector id="dwd">
                                <source:Vector id="vectorSource2"
                                    url="https://maps.dwd.de/geoserver/dwd/ows?service=WFS&amp;version=1.0.0&amp;request=GetFeature&amp;typeName=dwd:Warnungen_Gemeinden_vereinigt&amp;maxFeatures=50&amp;outputFormat=application%2Fjson&amp;"></source:Vector>
                            </layer:Vector>
                            <layer:Vector id="_IDGenVector1">
                                <source:Vector id="vectorSource" addfeature="onAddfeature" features="{Map>/features}">
                                    <source:features>
                                        <ol:Feature id="_IDGenFeature1" wkt="{Map>wkt}" />
                                    </source:features>
                                </source:Vector>
                            </layer:Vector>
                        </ol:Map>
                    </Page>
                </f:midColumnPages>
            </f:FlexibleColumnLayout>
        </content>
    </Page>
</mvc:View>
